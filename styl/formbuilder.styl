.fb-button
  display: inline-block;
  margin: 0;
  padding: 0.563rem 0.844rem;
  border: 0 none;
  background: #1fa3ec
  color: #fff
  text-align: center;
  text-decoration: none;
  font-size: 12px;
  line-height: 1.5;
  cursor: pointer;
  -webkit-border-radius: 0.356rem;
  -moz-border-radius:    0.356rem;
  border-radius:         0.356rem;
  -webkit-box-shadow: inset 0 -2px 0 hsla(0, 0%, 0%, 0.12);
  -moz-box-shadow:    inset 0 -2px 0 hsla(0, 0%, 0%, 0.12);
  box-shadow:         inset 0 -2px 0 hsla(0, 0%, 0%, 0.12);

  &[disabled]
    background: #ddd !important;
    -webkit-box-shadow: none !important;
    -moz-box-shadow:    none !important;
    box-shadow:         none !important;
    color: #777 !important;
    text-shadow: none !important;
    -ms-filter: "progid:DXImageTransform.Microsoft.Alpha(Opacity=65)";
    opacity: 0.65;
    cursor: default

.fb-clear
  clear: both

.fb-main
  max-width: 1000px
  margin: 0 auto
  padding: 0 20px 0 0
  position relative

.fb-save-wrapper
  position absolute
  right: 20px
  top: 10px

.fb-left
  width: 320px
  float: left
  padding-top: 30px

.fb-right
  padding-top: 70px
  margin-left: 320px
  border-left: 1px solid #ddd
  padding-left: 20px
  min-height: 100%
  overflow hidden

.fb-no-response-fields
  color: #999

  label
    display: inline-block
    color: #015580

.fb-tabs
  list-style: none
  margin: 0 0 20px 0
  padding: 0 0 0 20px
  border-bottom: 1px solid #ccc

  li
    display: inline-block

    a
      display block
      padding: 10px
      border-radius: 5px 5px 0 0
      font-size: 13px
      cursor: pointer
      border-left: 1px solid transparent
      border-right: 1px solid transparent

    &.active
      a
        border: 1px solid #ccc
        margin-bottom: -1px
        border-bottom-color: #fff

.fb-tab-content
  .fb-tab-pane
    padding: 0 20px
    display: none

    &.active
      display: block

.fb-add-field-types
  .section
    padding-bottom: 5px
    margin-bottom: 20px

  a
    display: inline-block
    width: 45%
    background-color: #666
    margin-bottom: 5px

.fb-response-fields
  padding-bottom: 150px

  a.sortable-placeholder
    display: block
    border: 1px dashed #ddd
    min-height: 80px
    height: 80px
    width: 100%

.fb-field-wrapper
  cursor: pointer
  position: relative

  &:hover, &.editing
    .actions-wrapper
      display: block

  &.editing
    background-color: #dfefff

    .subtemplate-wrapper
      border-color: #c2d7ef
      border-style: solid

  /* remove/duplicate buttons */
  .actions-wrapper
    display: none
    position: absolute
    bottom: -7px
    right: 5px
    z-index: 3

    a
      display: inline-block
      background-color: #ccc
      padding: 2px 8px

      &.js-duplicate
        background-color green

      &.js-clear
        background-color red

  .active_link
    bottom: 0px
    position: absolute
    z-index: 3

  .subtemplate-wrapper
    border: 1px dashed transparent
    padding: 10px 10px 0px 10px
    position: relative

    input[readonly]
      background-color: #FFFFFF
      cursor: text;

    .cover
      position: absolute
      top: 0
      left: 0
      height: 100%
      width: 100%
      z-index: 2

    > label
      display: block
      font-weight: bold
      margin-bottom: 5px

    abbr
      color red

  .input-line
    clear both
    margin-bottom: 10px

    .above-line
      margin-top: 7px

    > span
      display: inline-block
      vertical-align: top

      input
        width: 100%

      > label
        display block
        font-size: 13px
        margin-left: 3px

  .help-block
    display block
    font-size: 12px
    margin-top: 5px

.dropdown_country
  width: 170%

.fb-edit-field-wrapper
  font-size: 13px

  .fb-field-label
    font-weight: bold
    font-size: 16px

  .fb-field-condition-label
    padding-top: 2%;
    padding-left: 3%;
    margin-left: 0%;

  .fb-edit-section-header
    font-weight: bold
    border-bottom: 1px solid #ccc
    margin-top: 15px
    margin-bottom: 5px
    clear: both

  .js-add-option, .js-remove-option, .js-add-condition, .js-remove-condition
    padding: 3px 6px

  .js-add-option, .js-add-condition
    background-color green

  .js-remove-option, .js-remove-condition
    background-color red

  .fb-bottom-add
    margin-top: 8px

  .fb-field-label-length-unit
    display: inline-block

.fb-common-wrapper
  .fb-label-description

    input, textarea
      width: 100%

  .fb-common-checkboxes
    margin-left: 190px

.response-field-draggable-helper
  border: 1px dashed #ddd
  background: #eee

.response-field-text
  input
    &.rf-size-small
      width: 130px

    &.rf-size-medium
      width: 300px

    &.rf-size-large
      width: 100%

.response-field-paragraph
  textarea
    &.rf-size-small
      width: 200px
      min-height: 60px

    &.rf-size-medium
      width: 400px
      min-height: 100px

    &.rf-size-large
      width: 100%
      min-height: 200px

.response-field-heading
  label
    &.rf-size-small
      font-size:10px
      height:10px

    &.rf-size-medium
      font-size:25px
      height:25px

    &.rf-size-large
      font-size:50px
      height:50px

  p
    &.rf-size-small
      font-size:8px

    &.rf-size-medium
      font-size:15px

    &.rf-size-large
      font-size:40px

// FIELD TYPES
.response-field-address
  .street
    width: 400px

  .suburb, .state, .zip, .country
    width: 198px

.response-field-date
  .month, .day, .year
    width: 50px

.response-field-time
  .hours, .minutes, .seconds
    width: 50px

.response-field-checkboxes, .response-field-radio
  .fb-option
    margin-bottom: 5px
    display: inline-block

.panel
    text-align: center
    position: absolute
    z-index:1  

.panel1
    width: 40%
    top: 15px

.modal-body
  overflow-y: hidden;
  overflow-x: hidden;  

.top-panel1
  top:15px

.top-panel2 
  top:50px
  
.condition
  background: #424E57
  margin-bottom: 10px

@media (min-width: 768px)
    #map-canvas
      height:400px


@media (max-width: 767px)
    #map-canvas
      height:300px


@media (max-width: 480px)
    #map-canvas
      height: 200px
      margin: 0px
      padding: 0px  

