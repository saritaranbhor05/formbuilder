  .modal.fade.in
      top: 5px;
      left: 5px;
      right: 5px;
      bottom: 5px;
      width: auto;
      margin: 0px;

    .modal-header
      padding: 0px;
      height: 100%;

    .modal-body
      padding: 0px;
      margin-top: 0px;
      max-height: 100%;
      position: absolute;
      overflow: auto;
      top: 65px;
      left: 0;
      right: 0;
      bottom: 35px;

    #gmapModal .modal-body
      margin-top: 0px;

    #map-canvas
      height: 100%;

    .modal-footer
      position: absolute;
      overflow: auto;
      height: 30px;
      left: 0;
      right: 0;
      bottom: 0;

    .geo-location-panel
      overflow: auto;
      height: 60px;
      top: 0;
      left: 0;
      right: 0;
      padding-left: 5px;
      padding-top: 5px;

